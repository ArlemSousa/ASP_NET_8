@{
}

@if (ViewBag.Cliente != null)
{
    <table class="table table-dark">
        <tr>
            <td>Id</td>
            <td>Nome</td>
            <td>Email</td>
            <td>Ações</td>
        </tr>
        @foreach (var cliente in ViewBag.Cliente as List<Cliente>) 
        {
            <tr>
                <td>@cliente.Id</td>
                <td>@cliente.Nome</td>
                <td>@cliente.Email</td>
                <td><a href="@Url.Action("Detalhes", "Cliente", new { id = cliente.Id })" class="btn btn-sm btn-primary">Detalhes</a>
                <a href="@Url.Action("Excluir", "Cliente", new { id = cliente.Id })" class="btn btn-sm btn-danger">Excluir</a></td>
            </tr>
        }
    </table>


}
else
{
    <p>Não foram encontrados Clientes</p>
}
