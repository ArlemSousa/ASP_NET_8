@if (ViewBag.Produto != null)
{
    <table class="table table-dark">
        <tr>
            <td>Id</td>
            <td>Nome Produto</td>
            <td>Descrição</td>
            <td>Quantidade</td>
            <td>Preco</td>
            <td>Ações</td>
        </tr>
        @foreach (var produto in ViewBag.Produto as List<Produto>)
        {
            <tr>
                <td>@produto.Id</td>
                <td>@produto.NomeProduto</td>
                <td>@produto.Descricao</td>
                <td>@produto.Quantidade</td>
                <td>@produto.Preco</td>
                <td>
                    <a href="@Url.Action("Detalhes", "Produto", new { id = produto.Id })" class="btn btn-sm btn-primary">Detalhes</a>
                    <a href="@Url.Action("Excluir", "Produto", new { id = produto.Id })" class="btn btn-sm btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </table>


}
else
{
    <p>Não foram encontrados Produtos</p>
}
